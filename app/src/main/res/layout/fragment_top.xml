<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/title_fragment_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_fragment_top"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/event_button"
        android:layout_width="wrap_content"
        android:width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_fragment_top"
        android:text="@string/pop_up" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/event_button"
        android:scaleType="fitCenter"
        tools:src="@android:drawable/sym_call_missed"
        />

    <CheckBox
        android:id="@+id/likeIcon"
        android:layout_width="42dp"
        android:layout_height="44dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/title_fragment_top"
        android:layout_marginEnd="121dp"
        android:background="@drawable/like_icon"
        android:button="@null"
        android:checked="false"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@+id/event_button" />



    <TextView
        android:id="@+id/likesCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/likeIcon"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="53dp"
        android:text="count"
        android:textSize="10sp"/>

</RelativeLayout>